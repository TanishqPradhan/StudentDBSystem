{{#if removedStudent}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
   Student has been Removed.
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}


<div class="row">
    <div class="col-6"><h1>Students</h1></div>
    <div class="col-6 d-flex justify-content-end">
        <a href="/addstudent" type="button" class="btn btn-primary align-self-center">+ Add Student</a>
    </div>
</div>



<table class="table table-dark table-striped table-bordered">
  <thead>
    <tr>
     
      <th scope="col">Student ID</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Mailing Address</th>
      <th scope="col">GPA</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>

      {{#each rows}}
    <tr>
      
      <td>{{this.student_id}}</td>
      <td>{{this.first_name}}</td>
      <td>{{this.last_name}}</td>
      <td>{{this.email}}</td>
      <td>{{this.mailing_address}}</td>
      <td>{{this.gpa}}</td>
      <td class="text-end">
          <a href="/editstudent/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i> Edit</a>
          <a href="/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i> Delete</a>
      </td>
    </tr>
    {{/each}}

  </tbody>
</table>